package templates

templ AdminClientCreated(props ClientCreatedPageProps) {
	@Layout("OAuth Client", LayoutAdminNavbar, &props.NavbarProps) {
		<link rel="stylesheet" href="/static/css/pages/admin-forms.css"/>
		<div class="main-content">
			<div class="admin-form-container">
				<div class="card">
					<div class="admin-form-header">
						<h1 class="admin-form-title">Client Created Successfully</h1>
					</div>
					<div class="admin-success-banner">
						Client "<strong>{ props.Client.ClientName }</strong>" has been created successfully!
					</div>
					<div class="admin-warning-box">
						<div class="admin-warning-icon">âš </div>
						<div class="admin-warning-content">
							<strong>Important Security Notice</strong>
							<p>
								The client secret is shown only once for security reasons.
								Please copy and save it securely now.
							</p>
						</div>
					</div>
					<div class="admin-secret-box">
						<div class="admin-secret-header">
							<strong class="admin-secret-title">Client Secret</strong>
							<p class="admin-secret-description">
								Copy this secret and store it securely. You won't be able to see it again.
							</p>
						</div>
						<div class="admin-secret-value" id="clientSecret">{ props.ClientSecret }</div>
						<button onclick="copySecret()" class="admin-copy-button">
							ðŸ“‹ Copy to Clipboard
						</button>
					</div>
					<h3 class="admin-form-title" style="margin-bottom: var(--space-6);">Client Details</h3>
					<div class="admin-detail-section">
						<div class="admin-detail-row">
							<div class="admin-detail-label">Client ID</div>
							<div class="admin-detail-value">{ props.Client.ClientID }</div>
						</div>
						<div class="admin-detail-row">
							<div class="admin-detail-label">Client Name</div>
							<div class="admin-detail-value">{ props.Client.ClientName }</div>
						</div>
						if props.Client.Description != "" {
							<div class="admin-detail-row">
								<div class="admin-detail-label">Description</div>
								<div class="admin-detail-value">{ props.Client.Description }</div>
							</div>
						}
						<div class="admin-detail-row">
							<div class="admin-detail-label">Scopes</div>
							<div class="admin-detail-value">{ props.Client.Scopes }</div>
						</div>
						<div class="admin-detail-row">
							<div class="admin-detail-label">Grant Types</div>
							<div class="admin-detail-value">{ props.Client.GrantTypes }</div>
						</div>
						if props.Client.RedirectURIs != "" {
							<div class="admin-detail-row">
								<div class="admin-detail-label">Redirect URIs</div>
								<div class="admin-detail-value">{ props.Client.RedirectURIs }</div>
							</div>
						}
						<div class="admin-detail-row">
							<div class="admin-detail-label">Status</div>
							<div class="admin-detail-value">
								if props.Client.IsActive {
									<span class="status-badge status-active">Active</span>
								} else {
									<span class="status-badge status-inactive">Inactive</span>
								}
							</div>
						</div>
					</div>
					<div class="admin-action-buttons">
						<a href="/admin/clients" class="admin-action-btn primary">
							Back to Clients List
						</a>
					</div>
				</div>
			</div>
		</div>
	}
}
